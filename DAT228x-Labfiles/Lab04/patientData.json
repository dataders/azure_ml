{
  "name": "patientData",
  "properties": {
    "type": "AzureBlob",
    "linkedServiceName": "AzureStorageLinkedService",
    "structure": [],
    "typeProperties": {
      "folderPath": "bigdata/patient_data/{year}/{month}",
      "fileName": "patientData{date}.csv",
      "partitionedBy": [
        {
          "name": "year",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "yyyy"
          }
        },
        {
          "name": "month",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "MM"
          }
        },
        {
          "name": "date",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "dd"
          }
        }
      ],
      "format": {
        "type": "TextFormat",
        "firstRowAsHeader": true
      }
    },
    "external": true,
    "availability": {
      "frequency": "Day",
      "interval": 1
    },
    "policy": {
      "externalData": {
        "retryInterval": "00:01:00",
        "retryTimeout": "00:10:00",
        "maximumRetry": 3
      }
    }
  }
}